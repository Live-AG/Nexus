&НаСервере
Процедура СформироватьМенюИзбранного()
	
	Запрос = Новый Запрос;
	Запрос.Текст = "ВЫБРАТЬ
	               |	ЗакрепленныеЭлементы.ЭлементЗакрепления КАК ЭлементЗакрепления,
	               |	ЗакрепленныеЭлементы.НомерВГруппе КАК НомерВГруппе
	               |ПОМЕСТИТЬ ВТ_ЗакрепленныеЭлементы
	               |ИЗ
	               |	РегистрСведений.ЗакрепленныеЭлементы КАК ЗакрепленныеЭлементы
	               |ГДЕ
	               |	ЗакрепленныеЭлементы.Пользователь = &ТекущийПользователь
	               |	И ЗакрепленныеЭлементы.ЭлементЗакрепления ССЫЛКА Справочник.ГруппыИзбранного
	               |;
	               |
	               |////////////////////////////////////////////////////////////////////////////////
	               |ВЫБРАТЬ
	               |	ЕСТЬNULL(ВТ_ЗакрепленныеЭлементы.НомерВГруппе, 100) КАК ПолеУпорядочивания,
	               |	ГруппыИзбранного.Ссылка КАК ГруппаИзбранных
	               |ИЗ
	               |	Справочник.ГруппыИзбранного КАК ГруппыИзбранного
	               |		ЛЕВОЕ СОЕДИНЕНИЕ ВТ_ЗакрепленныеЭлементы КАК ВТ_ЗакрепленныеЭлементы
	               |		ПО (ВТ_ЗакрепленныеЭлементы.ЭлементЗакрепления = ГруппыИзбранного.Ссылка)
	               |ГДЕ
	               |	ГруппыИзбранного.Пользователь = &ТекущийПользователь
	               |	И НЕ ГруппыИзбранного.Предопределенный
	               |	И НЕ ГруппыИзбранного.ПометкаУдаления
	               |
	               |УПОРЯДОЧИТЬ ПО
	               |	ПолеУпорядочивания,
	               |	ГруппыИзбранного.Ссылка";
	
	Запрос.УстановитьПараметр("ТекущийПользователь", Пользователи.ТекущийПользователь());
	Результат = Запрос.Выполнить();
	Выборка = Результат.Выбрать();
	
	СчетчикЭлементов = 1;
	
	СтруктураКомандИИзбранного = Новый Структура; 
	
	Если Результат.Пустой() Тогда
		КнопкаМенюИзбранное = Элементы.Добавить("КомендаИзбранное_Нет" + СчетчикЭлементов, 
											Тип("КнопкаФормы"), 
											Элементы.ТаблицаИнформационныхБазКонтекстноеМенюГруппаИзбранное);	
		КнопкаМенюИзбранное.Заголовок		= "<Нет групп избранного>";
		КнопкаМенюИзбранное.Вид			= ВидКнопкиФормы.КнопкаКоманднойПанели;	
		КнопкаМенюИзбранное.Доступность	= Ложь;
	КонецЕсли;
	
	Пока Выборка.Следующий() Цикл
		
		СтруктураКомандИИзбранного.Вставить("КомендаИзбранное_" + СчетчикЭлементов, Выборка.ГруппаИзбранных);
		
		КомандаМенюИзбранного = Команды.Добавить("КомендаИзбранное_" + СчетчикЭлементов);
		КомандаМенюИзбранного.Заголовок	= Строка(Выборка.ГруппаИзбранных);
		КомандаМенюИзбранного.Действие		= "ВыборИзбранногоИзбранное";
		
		КнопкаМенюИзбранное = Элементы.Добавить("КомендаИзбранное_" + СчетчикЭлементов, 
											Тип("КнопкаФормы"), 
											Элементы.ТаблицаИнформационныхБазКонтекстноеМенюГруппаИзбранное);
		КнопкаМенюИзбранное.ИмяКоманды	= "КомендаИзбранное_" + СчетчикЭлементов;
		КнопкаМенюИзбранное.Вид			= ВидКнопкиФормы.КнопкаКоманднойПанели;
		СчетчикЭлементов = СчетчикЭлементов + 1; 
		
	КонецЦикла;
	
	СтруктураМенюИзбранного = СтруктураКомандИИзбранного; 
	
	ПолучитьМассивИзбранногоДляБазы();
	
КонецПроцедуры // СформироватьМенюИзбранного()

