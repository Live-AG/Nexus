Процедура ПолучитьСведенияОКонфигурации(ИнформационнаяБаза) Экспорт
	
	Если Не ЗначениеЗаполнено(ИнформационнаяБаза.ИдентификаторБазы) Тогда
		Возврат;
	КонецЕсли;
	
	ПутьКВременнымДаннымБазы = АдминистрированиеИнформационныхБаз.ПолучитьКаталогВременныхФайловБазы(ИнформационнаяБаза);  
	
	ТекстФайлаВыгрузки = Новый ЗаписьТекста(ПутьКВременнымДаннымБазы + "DumpList", КодировкаТекста.UTF8);	ТекстФайлаВыгрузки.ЗаписатьСтроку("Configuration");	ТекстФайлаВыгрузки.Закрыть();
	
	СтрокаСоединения = РаботаСоСкриптамиСервер.ПолучитьСтрокуСоединенияСБазой(ИнформационнаяБаза); 
	//СтрокаСоединения = "/opt/1cv8/8.3.22.1672/1cv8 DESIGNER /F""/Users/live/Documents/1CProjects/Project Life/DataBase"""; 
	//СтрокаСоединения = "/opt/1cv8/8.3.22.1672/1cv8 DESIGNER /F""/Users/live/Documents/1CProjects/Nexus/InfoBase"" /N""Администратор""";
	
	
	СкриптПолученияСведений = СтрокаСоединения + " /DumpConfigToFiles " + ПутьКВременнымДаннымБазы 
							+ " -listFile " + ПутьКВременнымДаннымБазы + "DumpList"
							+ " /DisableStartupDialogs /DisableStartupMessages"
							+ " /Out "+ ПутьКВременнымДаннымБазы + "log_" + Формат(ТекущаяДатаСеанса(), "ДФ=yyMMddHHmmss");
	
	Сообщить(СкриптПолученияСведений);
	
	ПараметрыЗапускаПрограммы = ФайловаяСистема.ПараметрыЗапускаПрограммы(); 
	ПараметрыЗапускаПрограммы.ПолучитьПотокВывода = Истина;
	ПараметрыЗапускаПрограммы.ДождатьсяЗавершения = Истина;
	
	РезультатВыполненияСкрипта = ФайловаяСистема.ЗапуститьПрограмму(СкриптПолученияСведений, ПараметрыЗапускаПрограммы); 
	
	ЧтениеXML = Новый ЧтениеXML;	ЧтениеXML.ОткрытьФайл(ПутьКВременнымДаннымБазы + "Configuration.xml");	Пока ЧтениеXML.Прочитать() Цикл	    Если ЧтениеXML.ТипУзла = ТипУзлаXML.НачалоЭлемента И ЧтениеXML.Имя = "Name" Тогда	        ЧтениеXML.Прочитать();	        Сообщить("Имя: " + ЧтениеXML.Значение);	    ИначеЕсли ЧтениеXML.ТипУзла = ТипУзлаXML.НачалоЭлемента И ЧтениеXML.Имя = "Version" Тогда	        ЧтениеXML.Прочитать();	        Сообщить("Версия: " + ЧтениеXML.Значение); 
			
		ИначеЕсли ЧтениеXML.ТипУзла = ТипУзлаXML.НачалоЭлемента И ЧтениеXML.Имя = "WebService" Тогда
			ЧтениеXML.Прочитать();
	        	Сообщить("WebService: " + ЧтениеXML.Значение);
		ИначеЕсли ЧтениеXML.ТипУзла = ТипУзлаXML.НачалоЭлемента И ЧтениеXML.Имя = "HTTPService" Тогда
			ЧтениеXML.Прочитать();
	        	Сообщить("HTTPService: " + ЧтениеXML.Значение);		
					    КонецЕсли;    	КонецЦикла;	ЧтениеXML.Закрыть();	   
	
